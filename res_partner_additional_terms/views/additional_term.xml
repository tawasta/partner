<?xml version="1.0"?>
<odoo>
    <record id="additional_terms_form" model="ir.ui.view">
        <field name="name">additional.terms.form</field>
        <field name="model">res_partner_additional_terms.term</field>
        <field name="arch" type="xml">
            <form name="Additional Term">
                <header></header>
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <label for="contents"/>
                    <field name="contents" nolabel="1"/>
                </sheet>
                <footer></footer>
            </form>
        </field>
    </record>
</odoo>