<?xml version="1.0"?>
<odoo>
    <record id="res_partner_additional_terms_form" model="ir.ui.view">
        <field name="name">res.partner.additional.terms.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']//field[@name='user_id']" position="after">
                <field name="additional_term_id"/>
            </xpath>
        </field>
    </record>
</odoo>
