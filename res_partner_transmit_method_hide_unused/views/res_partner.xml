<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field
            name="inherit_id"
            ref="account_invoice_transmit_method.view_partner_property_form"
        />
        <field name="arch" type="xml">

            <field name="customer_invoice_transmit_method_id" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('is_customer', '=', False)]}</attribute>
            </field>

            <field name="supplier_invoice_transmit_method_id" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('is_supplier', '=', False)]}</attribute>
            </field>

        </field>
    </record>
</odoo>
