<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.form.invoice.clause</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="arch" type="xml">
            <group name="accounting_entries" position="after">
                <group string="Invoices" name="invoice">
                    <field name="invoice_clause" />
                </group>
            </group>
        </field>
    </record>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.sale.clause</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='sale']//field[@name='user_id']"
                position="after"
            >
                <field name="sale_clause" />
            </xpath>
        </field>
    </record>
</odoo>
