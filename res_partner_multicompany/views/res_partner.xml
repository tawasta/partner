<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="res_partner_multicompany">
		<field name="name">res.partner.form.multicompany</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form" />
		<field name="arch" type="xml">

			<xpath expr="//page[@name='sales_purchases']" position="inside">
				<group id="company_relations">
					<field name="customer_of" help="Which companies does the customer belong to" widget="many2many_tags" />
					<field name="supplier_of" help="Which companies does the supplier belong to" widget="many2many_tags" />
				</group>
			</xpath>
		</field>
	</record>
</odoo>
