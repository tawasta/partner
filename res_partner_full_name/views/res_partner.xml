<?xml version="1.0" ?>
<odoo>
    <record id="view_partner_tree" model="ir.ui.view">
        <field name="name">view_partner_tree_full_name</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">

            <tree position="attributes">
                <attribute name="default_order">full_name</attribute>
            </tree>

            <field name="display_name" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </field>

            <field name="display_name" position="after">
                <field name="full_name" string="Name" />
            </field>

        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">view_res_partner_filter_full</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">

            <field name="name" position="attributes">
                <attribute
                    name="filter_domain"
                >['|','|',('full_name','ilike',self),('ref','=',self),('email','ilike',self)]</attribute>
            </field>

            <filter name="type_person" position="attributes">
                <attribute name="invisible">1</attribute>
            </filter>

            <filter name="type_company" position="attributes">
                <attribute name="invisible">1</attribute>
            </filter>

            <filter name="type_company" position="after">
                <group name="types" string="Types">
                    <filter
                        name="type_contact"
                        string="Contacts"
                        domain="[('type', '=', 'contact'), ('is_company', '=', False)]"
                    />
                    <filter
                        name="type_company"
                        string="Companies"
                        domain="[('type', '=', 'contact'), ('is_company', '=', True)]"
                    />
                    <filter
                        name="type_invoice"
                        string="Invoice addresses"
                        domain="[('type', '=', 'invoice')]"
                    />
                    <filter
                        name="type_shipping"
                        string="Shipping addresses"
                        domain="[('type', '=', 'delivery')]"
                    />
                    <filter
                        name="type_other"
                        string="Other addresses"
                        domain="[('type', '=', 'other')]"
                    />
                </group>
            </filter>

        </field>
    </record>

</odoo>
