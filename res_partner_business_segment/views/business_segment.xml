                    <field name="business_segment" string="Segment" filter_domain="[('business_segment','ilike',self)]" />
                    <field name="business_size" string="Size" filter_domain="[('business_size','ilike',self)]" />
                </search>
            </field>
        </record>
        -->

        <!-- Tree View -->
        <record model="ir.ui.view" id="business_segments_tree">
            <field name="name">Business segments tree view</field>
            <field name="model">business_segment.segment</field>
            <field name="arch" type="xml">
                <tree string="Business segments">
                    <field name="name" />
                    <field name="category"/>
                    <field name="parent"/>
                </tree>
            </field>
        </record>

        <!-- Open tree-view -->
        <record id="business_segment_tree_act" model="ir.actions.act_window">
            <field name="name">Business Segments</field>
            <field name="res_model">business_segment.segment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menuitem for business segments -->
    <menuitem action="business_segment_tree_act"
        id="segment_config"
        parent="sales_team.menu_config_address_book"
        sequence="4"
        groups="sales_team.group_sale_manager"/>

    </data>
</odoo>
