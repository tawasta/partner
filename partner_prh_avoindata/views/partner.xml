<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.prh.avoindata</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_fi_business_code.view_partner_form" />
        <field name="arch" type="xml">
            <field name="business_code" position="after">
               <button
                    name="action_update_info_from_prh"
                    string="Update company info"
                    type="object"
                    class="btn-primary oe_edit_only"
                    attrs="{'invisible': [('business_code', '=', False)]}"
                />
            </field>
        </field>
    </record>
</odoo>
