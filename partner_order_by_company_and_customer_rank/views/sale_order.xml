<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.customer.rank.by.company</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_customer_rank" invisible="1" />
                <field name="partner_is_company" invisible="1" />
            </field>
            <field name="partner_id" position="attributes">
                <attribute
                    name="order"
                >partner_customer_rank desc, partner_is_company desc</attribute>
            </field>
        </field>
    </record>
</odoo>
