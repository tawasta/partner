<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_partner_pseudonymization_wizard" model="ir.ui.view">
        <field name="model">partner.pseudonymization</field>
        <field name="arch" type="xml">
            <form string="Pseudonymize partners">
                <p>Are you sure you want to pseudonymize the selected partner(s)?</p>
                <p class="alert alert-danger" role="alert">This action can not be reversed after confirming!</p>
                <footer>
                    <button string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"/>
                    or
                    <button string="Cancel"
                        class="oe_link"
                        special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_partner_pseudonymization"
                name="Pseudonymize"
                key2="client_action_multi"
                res_model="partner.pseudonymization"
                src_model="res.partner"
                view_mode="form"
                target="new"
                view_type="form"
                groups="base.group_partner_manager"/>

</odoo>
